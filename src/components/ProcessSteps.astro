---
interface Step { title: string; text: string }
interface Props { steps: Step[] }
const { steps } = Astro.props as Props;
---
<ol class="grid md:grid-cols-3 gap-6">
  {steps.map((s, i) => (
    <li class="bg-surface/70 border border-white/10 rounded-xl p-6">
      <span class="text-3xl font-bold text-[color:var(--accent)]">0{i+1}</span>
      <h3 class="text-xl font-semibold mt-2">{s.title}</h3>
      <p class="text-text-muted mt-2">{s.text}</p>
    </li>
  ))}
</ol>
