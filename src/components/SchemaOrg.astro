---
interface Props {
  type: 'Organization'|'LocalBusiness'|'Service'|'FAQPage'|'BreadcrumbList'|'Person'|'EducationalOccupationalCredential';
  data: Record<string, any>;
}
const { type, data } = Astro.props as Props;
const json = { '@context':'https://schema.org', '@type': type, ...data };
---
<script type="application/ld+json">
  {JSON.stringify(json)}
</script>
