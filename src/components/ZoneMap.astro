---
import { BASE } from '../utils/paths';
interface Props { title: string; areas: string[]; note?: string }
const { title, areas, note } = Astro.props as Props;
---
<section aria-labelledby="zone-title" class="grid lg:grid-cols-2 gap-8">
  <div>
    <h3 id="zone-title" class="text-2xl font-semibold">{title}</h3>
    <ul class="mt-4 grid md:grid-cols-2 gap-2">
      {areas.map(a => <li class="rounded-lg border border-white/10 px-3 py-2 bg-white/5">{a}</li>)}
    </ul>
    {note && <p class="text-text-muted mt-4">{note}</p>}
  </div>
  <figure class="rounded-xl overflow-hidden border border-white/10">
    <img src="${BASE}images/map.jpg" alt="Carte stylisée de la zone d’intervention" loading="lazy" width="1200" height="900" />
  </figure>
</section>
