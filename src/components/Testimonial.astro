---
interface Props { quote: string; author?: string; role?: string }
const { quote, author, role } = Astro.props as Props;
---
<blockquote class="bg-surface/70 border border-white/10 rounded-xl p-6">
  <p class="leading-relaxed">“{quote}”</p>
  {(author || role) && <footer class="mt-3 text-sm text-text-muted">— {author}{role ? `, ${role}` : ''}</footer>}
</blockquote>
