---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import SchemaOrg from '../components/SchemaOrg.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Contact — Julien Jeangirard Coaching" description="Contactez Julien Jeangirard — préparation mentale, coaching de vie, coaching en entreprise. Pontarlier, Doubs & Suisse voisine.">
  <SEO title="Contact — Julien Jeangirard Coaching" description="Formulaire de contact, coordonnées et zone d’intervention." />
  <SchemaOrg type="BreadcrumbList" data={{
    itemListElement: [
      { '@type':'ListItem', position: 1, name: 'Accueil', item: 'https://www.julienjeangirard-coaching.fr' },
      { '@type':'ListItem', position: 2, name: 'Contact', item: 'https://www.julienjeangirard-coaching.fr/contact' }
    ]
  }} />

  <section class="container py-16">
    <SectionTitle title="Contact" subtitle="Expliquez votre besoin en quelques lignes. Je vous réponds sous 24–48h." />

    <div class="grid lg:grid-cols-2 gap-8">
      <div class="bg-surface/70 border border-white/10 rounded-xl p-6">
        <ContactForm privacyNote="En envoyant ce formulaire, vous acceptez d’être recontacté·e par email/téléphone. Données non revendues, conservation limitée au traitement de votre demande." />
      </div>

      <aside class="space-y-6">
        <div class="bg-surface/70 border border-white/10 rounded-xl p-6">
          <h2 class="text-xl font-semibold">Coordonnées</h2>
          <ul class="mt-3 space-y-2">
            <li>Email : <a class="underline" href="mailto:contact@julienjeangirard-coaching.fr">contact@julienjeangirard-coaching.fr</a></li>
            <li>Tél : <a class="underline" href="tel:+33600000000">+33 6 00 00 00 00</a></li>
          </ul>
        </div>
        <div class="bg-surface/70 border border-white/10 rounded-xl p-6">
          <h2 class="text-xl font-semibold">Zone d’intervention</h2>
          <p class="text-text-muted">Pontarlier, Besançon → Lausanne, Morteau, Yverdon-les-Bains, Haut-Jura • Présentiel & visio</p>
          <div class="mt-4 rounded-lg overflow-hidden border border-white/10">
            <img src="/images/placeholder-map.jpg" alt="Carte Google Maps placeholder" loading="lazy" width="1200" height="900" />
          </div>
        </div>
      </aside>
    </div>
  </section>
</BaseLayout>
